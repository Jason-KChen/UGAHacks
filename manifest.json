{
    "manifest_version": 2,

    "name": "aeroplicity",
    "description": "for UGAHacks",
    "version": "0.0.1",

    "permissions": [
            "*://*/*", "http://*/*", "https://*/*"
    ],

    "content_scripts": [
            {
                "matches": ["*://*/*"],
                "js": [
                    "jquery-3.1.1.js",
                    "APIHelperFunctions.js",
                    "ScrapeText.js",
                    "ScrapeImg.js",
                    "ListOfCities.js"
                ]
            }
    ],

    "browser_action": {
        "default_popup":"html/index.html"
    },

    "background": {
        "scripts": ["jquery-3.1.1.js","background.js"],
        "persistent": false
    }
}
